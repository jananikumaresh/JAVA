import java.util.*;
public class Circle{
    public static void main(String args[]){
        
        Scanner a =new Scanner (System. in);
        int b=a.nextInt();
        double area =Math.PI* (b*b);
        double cir=Math.PI*b*2;
        System.out.printf("Area = %.2f%n", area);
        System.out.printf("Circumference = %.2f%n", cir);
        
    }
}
